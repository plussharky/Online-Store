@model Product

<div class="card card-outline-primary m-2 p-2">
    <div class="bg-faded p-1">
        <a class="text-decoration-none text-primary" s asp-action="About" asp-controller="Product"
            asp-route-productId="@Model.ProductID">
            <h4>@Model.Name</h4>
        </a>
        <p>@Model.Category</p>
        <form id="@Model.ProductID" asp-action="AddToCart"
          asp-controller="Cart" method="post">
        <input type="hidden" asp-for="ProductID" />
        <input type="hidden" name="returnUrl"
               value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <button type="submit" class="btn btn-primary btn-sm pull-right" style="float:right">
            @Model.Price.ToString("c")
        </button>
        </form>
        <span class="card-text p-1"> @Model.Description</span>
    </div>
</div>